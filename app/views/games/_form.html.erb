
<%= simple_form_for(@game) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :dateTime %>
    <%= f.input :location %>
    <%= f.input :fieldType %>
    <%= f.input :fieldConditions %>
    <%= f.input :weather, collection: ['cold', 'hot'] %>
    <%= f.input :temperature %>
    <%= f.association :home_team %>
    <%= f.association :away_team %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

