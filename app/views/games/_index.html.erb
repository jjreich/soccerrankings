<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Datetime</th>
      <th>Location</th>
      <th>Fieldtype</th>
      <th>Fieldconditions</th>
      <th>Weather</th>
      <th>Temperature</th>
      <th>Home Team</th>
      <th>Away Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.dateTime %></td>
        <td><%= game.location %></td>
        <td><%= game.fieldType %></td>
        <td><%= game.fieldConditions %></td>
        <td><%= game.weather %></td>
        <td><%= game.temperature %></td>
        <td><%= game.home_team.name %></td>
        <td><%= game.away_team.name %></td>
        <td><%= link_to 'Show', game, :class => "", remote: true %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

