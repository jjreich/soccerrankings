<% if PlayerBallSkill.where(:id => this_player_id).present? %>

  <% @player_ball_skill = PlayerBallSkill.find(this_player_id) %>

    <table id="playerData" class="display" style="width:100%">
      <thead>
        <tr>
          <th>Juggling</th>
          <th>Dribbling</th>
          <th>Passing</th>
          <th>Heading</th>
          <th>Shooting</th>
          <th>Longballs</th>
          <th>20 Yard Shuttle</th>
          <th>30 Yard Sprint</th>
          <th>Vertical Leap</th>
          <th>Last Test Date</th>
        </tr>
      </thead>

      <tbody>
          <tr>
            <td>
              <%= @player_ball_skill.juggling %> 
            </td>
            <td>
              <%= @player_ball_skill.dribbling %>
            </td>          
            <td>
              <%= @player_ball_skill.receiving %>
            </td>          
            <td>
              <%= @player_ball_skill.heading %>
            </td>
            <td>
              <%= @player_ball_skill.shooting %>
            </td>
            <td>
              <%= @player_ball_skill.longBalls %>
            </td>
            <td>
              <%= number_with_precision(@player_ball_skill.twentyYardShuttle, :precision => 2) %> sec
            </td>
            <td>
              <%= number_with_precision(@player_ball_skill.thirtyYardSprint, :precision => 2) %> sec
            </td>
            <td>
              <%= number_with_precision(@player_ball_skill.verticalLeap, :precision => 1) %> inches
            </td>
            <td>
              <%= @player_ball_skill.skillsTestDate %>
            </td>   
          </tr>
      </tbody>
    </table>

  

  <%= link_to 'Edit', edit_player_ball_skill_path(@player_ball_skill) %> |
  <%= link_to 'Back', player_ball_skills_path %>

<% end %>